{% extends 'base.html.twig' %}


{% block body %}
    {{ form_start(form, {'attr': {'class': 'form-register'}}) }}
        {{ form_errors(form) }}

            <h2 class="form-singin-heading">User Update</h2>

            {{ form_widget(form.first_name, {'attr':{'class':'form-control','placeholder':'First Name'}} ) }}
            {{ form_errors(form.first_name) }}

            {{ form_widget(form.last_name, {'attr':{'class':'form-control','placeholder':'Last Name'}} ) }}
            {{ form_errors(form.last_name) }}
            
            {{ form_widget(form.language, {'attr':{'class':'form-control'}} ) }}
            {{ form_errors(form.language) }}
            
            {{ form_widget(form.country, {'attr':{'class':'form-control','placeholder':'Country'}} ) }}
            {{ form_errors(form.country) }}
            
            {{ form_widget(form.phone, {'attr':{'class':'form-control','placeholder':'Phone'}} ) }}
            {{ form_errors(form.phone) }}
            
            {{ form_widget(form.mobile, {'attr':{'class':'form-control','placeholder':'Mobile'}} ) }}
            {{ form_errors(form.mobile) }}
            
            {{ form_widget(form.city, {'attr':{'class':'form-control','placeholder':'City'}} ) }}
            {{ form_errors(form.city) }}
            
            {{ form_widget(form.address, {'attr':{'class':'form-control','placeholder':'Address'}} ) }}
            {{ form_errors(form.address) }}

            <input type="submit" 
                class="btn btn-lg btn-primary btn-block" 
                value="{{ 'registration.submit'|trans }}" />

    {{ form_end(form) }}
{% endblock %}